<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.push.api.admin.mapper.AdminMapper">
    
    <select id="selectUserTokenList" resultType="resultMap">
        select
            device_token
        from  user_token_info
        where 1=1
            and project_id = #{project_id}
            and user_id in
            <foreach collection="user_ids" item="arr" index="index" open="(" separator="," close=")">
                #{arr}
            </foreach>
            and notification_status = true
    </select>

    <select id="selectProjectId" resultType="resultMap">
        select
            project_nm
        from push_project
        where 1=1
            and project_id = #{project_id}
    </select>

    <insert id="insertNotificationHistory" parameterType="HashMap">
        insert into user_notification_history(project_id,notification_cd,user_id,device_token,receive_dt)
        values (#{project_id},#{notification_cd},#{user_id},#{device_token},#{receive_dt})
    </insert>

    <select id="selectNotification" resultType="resultMap">
        select
            project_id,
            notification_cd,
            title,
            body,
            image,
            and_icon,
            and_click_event,
            and_sound
        from notification
        where 1=1
            and notification_cd = #{notification_cd}
    </select>
    
</mapper>